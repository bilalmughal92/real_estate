<body>
  <div class="modal fade" id="login" role="dialog">
    <%= form_for Client.new, url: '/login', html: {id: "login_form"} do |f| %>
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;
            </button>
            <h4 class="modal-title glyphicon glyphicon-log-in">Login</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label for="email">Email:</label>
              <%= f.text_field :email, class: "form-control", placeholder: "Enter email", required: true %>
            </div>
            <div class="form-group">
              <label for="pwd">Password:</label>
              <%= f.password_field :password, class: "form-control", placeholder: "Enter password", required: true %>
            </div>
            <div class="row">
              <div class="col-md-2">
                <%= f.submit "Login", class: "btn btn-success" %>
              </div>
              <div class="col-md-2">
                <%= f.submit "Reset", class: "btn btn-danger form-reset", id: "signin_form_reset" %>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</body>

<script>
  $(document).ready(function(){
    $('#signin_form_reset').click(function(event){
      event.preventDefault();
      $('#login_form')[0].reset();
    });
  });
</script>